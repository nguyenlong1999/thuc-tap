<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="depot_tree" model="ir.ui.view">
        <field name="name">depot.tree</field>
        <field name="model">mg.depot</field>
        <field name="arch" type="xml">
            <tree string="Depot">

            </tree>
        </field>
    </record>

    <record id="depot_form" model="ir.ui.view">
        <field name="name">depot.form</field>
        <field name="model">mg.depot</field>
        <field name="arch" type="xml">
            <form string="New depot">
                <sheet>
                    <div class="o_horizontal_separator">
                        New Depot
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Address">
                            <group>
                                <field name="street"/>
                                <field name="zip"/>
                                <field name="city"/>
                                <field name="country_id"/>
                                <field name="province_id"/>
                                <field name="district"/>
                                <field name="ward"/>
                            </group>
                        </page>
                        <page string="Attachment">

                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="depot_action" model="ir.actions.act_window">
        <field name="name">New depot</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mg.depot</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new Depot
            </p>
        </field>
    </record>
    <record id="action_depot_class" model="ir.actions.act_window">
        <field name="name">Depot</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mg.depot</field>
        <!-- <field name="view_type">form</field> --> <!-- Odoo 13 has removed this field -->
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('depot_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('depot_form')})]"/>
    </record>
    <!-- Top menu item -->
    <menuitem id="class_root"
              name="Managerment"
              sequence="10"/>
    <menuitem id="depot_root"
              name="Depot"
              parent="class_root"
              sequence="10"/>
    <menuitem id="depot"
              name="Depots"
              parent="depot_root"
              action="action_depot_class"
              sequence="10"/>

</odoo>